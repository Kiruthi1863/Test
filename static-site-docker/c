<script>
  const particlesContainer = document.getElementById('particles-container');
  const totalParticles = 30;
  const particleTypes = ['star', 'moon'];

  for (let i = 0; i < totalParticles; i++) {
    const particle = document.createElement('div');
    particle.classList.add('particle');
    const type = particleTypes[Math.floor(Math.random() * particleTypes.length)];
    particle.classList.add(type);
    particle.style.setProperty('--i', i);
    particle.style.top = `${Math.random() * 100}vh`;
    particle.style.left = `${Math.random() * 100}vw`;
    particle.style.opacity = 0.3 + Math.random() * 0.5;
    particlesContainer.appendChild(particle);
  }


  // Get elements
  const musicToggle = document.getElementById('music-toggle');
  const bgMusic = document.getElementById('bg-music');
  const clickSound = document.getElementById('click-sound');

  // Music toggle button click
  musicToggle.addEventListener('click', () => {
    clickSound.currentTime = 0; // rewind
    clickSound.play(); // play ASMR click

    if (bgMusic.paused) {
      bgMusic.volume = 0.3;  // lower volume for ambient effect
      bgMusic.play();
      musicToggle.textContent = 'üéµ ASMR On';
      musicToggle.setAttribute('aria-pressed', 'true');
    } else {
      bgMusic.pause();
      musicToggle.textContent = 'üéµ ASMR Off';
      musicToggle.setAttribute('aria-pressed', 'false');
    }
  });

  // Optional: Play ASMR click on every nav button click
  document.querySelectorAll('nav a').forEach(link => {
    link.addEventListener('click', () => {
      clickSound.currentTime = 0;
      clickSound.play();
    });
  });



</script>

